<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lingzhen.rdm.mapper.UserMapper">

    <insert id="save" parameterType="map" useGeneratedKeys="true" keyProperty="userId" >
        INSERT INTO sys_user(userName,`password`,nickname,phoneNumber,state,createTime,createDate)
        VALUE (#{userName},#{password},#{nickname},#{phoneNumber},1,#{createTime},#{createDate})
    </insert>

    <select id="validUserNameAndPhoneNumber" parameterType="map" resultType="map">
        SELECT userId,userName,phoneNumber
        FROM sys_user
        WHERE state != 0
        AND (
            userName = #{userName} OR phoneNumber = #{phoneNumber}
        )
    </select>

    <select id="findByUserName" parameterType="map" resultType="map" >
        SELECT userId,userName,password,nickname,phoneNumber,state
        FROM sys_user
        WHERE userName = #{userName}
    </select>

    <select id="findById" parameterType="java.lang.Long" resultType="map" >
        SELECT userId,userName,nickname,phoneNumber,state
        FROM sys_user
        WHERE userId = #{_parameter}
    </select>

    <insert id="insertAccessLog" parameterType="map" useGeneratedKeys="true">
        INSERT INTO sys_user_access_log(userId,method,parameter,httpServletRequestAttributes,remark,createTime,createDate)
        VALUE (#{userId},#{method},#{parameter},#{httpServletRequestAttributes},#{remark},#{createTime},#{createDate})
    </insert>

    <select id="validMobile" parameterType="java.lang.String" resultType="map" >
        SELECT userId,userName,phoneNumber
        FROM sys_user
        WHERE state != 0
        AND phoneNumber = #{phoneNumber}
    </select>
</mapper>
